<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--mapping of the resources-->
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>resteasy.role.based.security</param-name>
        <param-value>true</param-value>
    </context-param>

    <!--use https to secure everything-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>dictatetrainer-resource-war-0.0.1-SNAPSHOT</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <!--no constraint regarding security on /api/users/*-->
    <security-constraint>
        <display-name>API New User</display-name>
        <web-resource-collection>
            <web-resource-name>API New User</web-resource-name>
            <url-pattern>/api/users/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
    </security-constraint>

    <!--you need to be logged to access /api/*-->
    <security-constraint>
        <display-name>API Area</display-name>
        <web-resource-collection>
            <web-resource-name>API Area</web-resource-name>
            <url-pattern>/api/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <!--method by which WildFly will be authenticating the users-->
    <!--this method sends password as plaintext - you have to use https-->
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <!--user security roles-->
    <security-role>
        <role-name>TEACHER</role-name>
    </security-role>
    <security-role>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>
    <security-role>
        <role-name>STUDENT</role-name>
    </security-role>

</web-app>